<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script src="/socket.io/socket.io.js"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="container bg-secondary p-3">
      <div class="row">
        <div class="col md-6">
          <hr />
          <h1>Cargar Producto</h1>
          <hr />

          <form onsubmit="return addProduct(this)">
            <div class="form-grid">
              <label for="title">Titulo</label>
              <input id="title" class="form-control" />
            </div>
            <div class="form-grid">
              <label for="price">Precio</label>
              <input id="price" class="form-control" />
            </div>
            <div class="form-grid">
              <label for="thumbnail">Foto</label>
              <input id="thumbnail" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mt-4">Enviar</button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <div class="container" id="productos">

    </div>
    <div class="container mt-5">
      <h1 class="text-primary">Centro de mensajes</h1>
      <div>
        <input type="text" id="user" placeholder="e-mail" class="mb-1" />
      </div>
      <hr />
      <div class="row">
        <div class="col" id="mensajes"></div>
      </div>
      <hr />
      <div class="row">
        <div class="col">
          <form onsubmit="return addMessage(this);">
            <input type="text" id="msg" placeholder="Mensaje" class="m-3" />
            <button type="submit" class="btn btn-primary">Enviar</button>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/index.js"></script>
  </body>
</html>
