<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>Sign Up</title>
  </head>
  <body>
    <form onSubmit="return checkPassword(this)" action="/signup" method="POST">
      <div class="form-grid">
        <input type="text" name="email" id="email" placeholder="email" class="m-3" />
      </div>
      <div class="form-grid">
        <input type="text" name="name" id="name" placeholder="Nombre" class="m-3" />
      </div>
      <div class="form-grid">
        <input type="text" name="phone" id="phone" placeholder="Telefono" class="m-3" />
      </div>
      <div class="form-grid">
        <input type="text" name="address" id="address" placeholder="DirecciÃ³n" class="m-3" />
      </div>
      <div class="form-grid">
        <input type="password" name="password" id="password" placeholder="Password" class="m-3" />
      </div>
      <div class="form-grid">
        <input type="password" name="password2" id="password2" placeholder="Repetir password" class="m-3" />
      </div>
      <button type="submit">Registrar</button>
    </form>
    <a href="http://localhost:8080/productos-test/login">Login</a>
  </body>
  <script>
    function checkPassword(form) {
     const password = form.password.value;
      const confirmPassword = form.password2.value;
  
      if (password != confirmPassword) {
        alert("Los passwords deben coincidir.");
        return false;
      } else {
        return true;
      }
    }
  </script>
</html>
