<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
    <title>Formulario</title>
</head>

<body>
    <%- include('../views/partials/header.ejs'); %>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-4 mb-md-0 d-flex">
                <% productos.forEach(prod => { %>
                    <div class="card text-center m-2" style="width: 22rem;">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                          <img src='<%=prod.thumbnail%> ' class="img-fluid" />
                          <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                          </a>
                        </div>
                      
                        <div class="card-body">
                          <h5 class="card-title"><%=prod.title%></h5>
                          <p class="card-text">
                            <%=prod.desc%>
                          </p>
                          
                          <button type="button" class="btn btn-primary" onclick="add('<%=prod._id%>')">Comprar</button>
                          <% if(administrador) { %>
                            <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                          <% }; %>
                        </div>
                        <div class="card-footer">$ <%=prod.price%></div>
                      </div>
                <% }); %>
            </div>
        </div>
    </div>

    <%- include('../views/partials/footer.ejs'); %>
    <script>
      const add = async (id_prod) => {
        if(!sessionStorage.getItem("user")){
          sessionStorage.setItem("user","<%=user%>")
        };
      let bod = JSON.stringify({'id_prod': `${id_prod}`})
      let url = `http://localhost:8080/carrito/productos`
      response = await fetch(url, {
        method: 'POST',
        body: bod,
        headers: {
          'Content-Type': 'application/json'
        } 
      })
      alert("Producto agregado")
    }
    </script>
</body>
</html>


