<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
    <title>Formulario</title>
</head>
<body>
    <%- include('../views/partials/header.ejs'); %>
    <div class="container">
      <% if (productos){ %>
      <table class="table table-dark">
        <thead>
          <tr class="m-5">
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Icon</th>
            <th scope="col">Qty</th>
            <th scope="col">Borrar</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(prod => { %>
          <tr>
            <td><%=prod.title%></td>
            <td><%=prod.price%></td>
            <td><img class="thumbnail" style="width: 150px;" src='<%=prod.thumbnail%> ' /></td>
            <td scope="row"><%=prod.qty%></td>
            <td><button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete" onclick="del('<%=prod._id%> ')"><i class="fa fa-trash"></i></button></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% }else { %>
      <h2>No hay productos</h2>
      <% } %>
      <a href="#"><button class="btn btn-secondary mt-4" onclick="enviar()">Enviar Pedido</button></a
      >
    </div>
    <%- include('../views/partials/footer.ejs'); %>
<script>
  const enviar = () => {
    window.location.href = `http://localhost:8080/carrito/order/`
  }
  const del = async (id_prod) =>{
    let url = `http://localhost:8080/carrito/${id_prod}`
      response = await fetch(url, {
        method: 'DELETE',
        })
        alert('Producto Eliminado')
        document.location.reload()
  }
</script>
  </body>
</html>


